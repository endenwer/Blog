$('#pull-btn').text('Загрузка');
$('#pull-btn').attr('class', 'not-active btn pull-btn');
$('article').last().after("<%= escape_javascript(render(@posts)) %>")
$('#pull-btn').attr('href', "<%= root_path(:page => @posts.next_page) %>");
$('#pull-btn').text('Еще');
$('#pull-btn').attr('class', 'btn pull-btn');
<% unless @posts.next_page %>
  $('pull-btn').remove();
<% end %>