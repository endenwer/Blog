<div class="media">
  <a class="pull-left avatar" href="#">
    <img class="media-object img-circle" src="../assets/author-sing.jpg" width="40" height="40" alt="">
  </a>
    <h4 class="media-heading">
    <% if comment.user.nil? %>
      <%= comment.name %>
    <% else %>
      <%= link_to comment.user.login, comment.user %>
    <% end %>
    <span><%= time_ago_in_words(comment.created_at) %></span></h4>
    <p><%= comment.content %></p>
</div>