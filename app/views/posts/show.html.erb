<% provide :title, @post.title %>
<%= render 'shared/main_nav' %>
<%= render 'shared/hero'  %>
<%= render 'shared/breadcrumb' %>
<div class="container content">
  <div class="row">
    <div class="col-md-10 col-md-offset-1">
      <%= render 'shared/flash_messages' unless flash[:success].nil? %>
      <div class="post-date">
        <%= time_ago_in_words(@post.created_at) %> | <%= link_to @post.user.login, @post.user %> <span>
        <a href=""><%= "Комментариев #{ @post.comments.count }" %></a></span>
      </div>
      <h1><%= @post.title %></h1>
      <%= @post.content %>

      <ul class="social-links outline text-center">
        <li><a href="#link"><i class="icon-twitter"></i></a></li>
        <li><a href="#link"><i class="icon-facebook"></i></a></li>
        <li><a href="#link"><i class="icon-googleplus"></i></a></li>
      </ul>

      <div id="author" class="clearfix">
        <img class="img-circle" alt="" src="../assets/author-sing.jpg" height="96" width="96">
        <div class="author-info">
          <h3><%= @post.user.login %></h3>
          <p>If rubbin' frozen dirt in your crotch is wrong, hey I don't wanna be right. You can follow her on <a href="">Twitter</a>.</p>
        </div>
      </div>

      <div class="post-popular">
        <div class="row hidden-xs">
          <div class="col-sm-4 col-md-4">
            <a href="post-video.html"><img src="../assets/img2.jpg" class="img-responsive" alt="img2"></a>
            <h4 class="text-center"><a href="post-video.html">But I've never been to the moon!</a></h4>
            <p class="post-date text-center">MAY 10, 2014</p>
          </div>
          <div class="col-sm-4 col-md-4">
            <a href="post-typography.html"><img src="../assets/img1.jpg" class="img-responsive" alt="img1"></a>
            <h4 class="text-center"><a href="post-typography.html">We don't have a brig</a></h4>
            <p class="post-date text-center">september 27, 2014</p>

          </div>
          <div class="col-sm-4 col-md-4">
            <a href="post-image.html"><img src="../assets/img3.jpg" class="img-responsive" alt="img3"></a>
            <h4 class="text-center"><a href="post-image.html">Every other day it's food, food, food.</a></h4>
            <p class="post-date text-center">april 2, 2014</p>

          </div>
        </div>
        <div class="row visible-xs">
          <div class="col-sm-12">
            <div class="media">
              <a class="pull-left" href="post-video.html"><img class="media-object" src="img2.jpg" width="100" alt=""></a>
              <div class="media-body">
                <h4 class="media-heading"><a href="post-video.html">But I've never been to the moon!</a></h4>
                <p class="post-date">may 10, 2014</p>
              </div>
            </div>
            <div class="media">
              <a class="pull-left" href="post-typography.html"><img class="media-object" src="img1.jpg" width="100" alt=""></a>
              <div class="media-body">
                <h4 class="media-heading"><a href="post-typography.html">We don't have a brig</a></h4>
                <p class="post-date">september 27, 2014</p>
              </div>
            </div>
            <div class="media">
              <a class="pull-left" href="post-image.html"><img class="media-object" src="img3.jpg" width="100" alt=""></a>
              <div class="media-body">
                <h4 class="media-heading"><a href="post-image.html">Every other day it's food, food, food.</a></h4>
                <p class="post-date">april 2, 2014</p>
              </div>
            </div>

          </div>
        </div>
      </div>

      <h3><%= "Комментариев #{ @post.comments.count }" %></h3>
      <%= render @comments %>

      <div id="comments_pagination">
        <span class="page-numbers current">1</span>
        <a class="page-numbers" href="#">2</a>
        <a class="next page-numbers" href="#"><i class="icon-arrow-right2"></i></a>
      </div>

      <h3>Add a new comment</h3>
      <%= render 'comment_form' %>

    </div>
  </div>
</div>
<%= render 'shared/footer' %>